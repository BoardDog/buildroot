config BR2_PACKAGE_GSTREAMERMM
	bool "gstreamermm"
	depends on BR2_INSTALL_LIBSTDCPP
	depends on BR2_TOOLCHAIN_GCC_AT_LEAST_4_8 # C++11
	depends on BR2_USE_WCHAR              # libglib2 <- glibmm
	depends on BR2_TOOLCHAIN_HAS_THREADS  # libglib2 <- glibmm
	depends on BR2_USE_MMU                # libglib2 <- glibmm
	select BR2_PACKAGE_GSTREAMER1
	select BR2_PACKAGE_GLIBMM
	select BR2_PACKAGE_LIBSIGC
	help
	  The gstreamermm package is a set of C++ bindings for gstreamer-1.

	  https://wiki.gnome.org/Projects/gstreamermm

comment "gstreamermm needs a toolchain w/ C++, wchar, threads, gcc >= 4.8"
	depends on BR2_USE_MMU
	depends on !BR2_INSTALL_LIBSTDCPP || !BR2_TOOLCHAIN_GCC_AT_LEAST_4_8 \
		|| !BR2_USE_WCHAR || !BR2_TOOLCHAIN_HAS_THREADS

config BR2_PACKAGE_WPEFRAMEWORK_CDMI_PLAYREADY_MODULE
	bool "playready"
	depends on (BR2_PACKAGE_PLAYREADY && BR2_PACKAGE_WPEFRAMEWORK_CDMI_SOFTWARE_OVERRIDE) || BR2_PACKAGE_HAS_PLAYREADY
	select BR2_PACKAGE_WPEFRAMEWORK_PLUGINS
	select BR2_PACKAGE_WPEFRAMEWORK_CDM
        select BR2_PACKAGE_WPEFRAMEWORK_CDMI_PLAYREADY           if  BR2_PACKAGE_WPEFRAMEWORK_CDMI_SOFTWARE_OVERRIDE
        select BR2_PACKAGE_WPEFRAMEWORK_CDMI_PLAYREADY_NEXUS     if !BR2_PACKAGE_WPEFRAMEWORK_CDMI_SOFTWARE_OVERRIDE && !BR2_PACKAGE_VSS_SDK && !BR2_PACKAGE_HAS_NEXUS_SAGE 
        select BR2_PACKAGE_WPEFRAMEWORK_CDMI_PLAYREADY_NEXUS_SVP if !BR2_PACKAGE_WPEFRAMEWORK_CDMI_SOFTWARE_OVERRIDE && !BR2_PACKAGE_VSS_SDK && BR2_PACKAGE_HAS_NEXUS_SAGE 
        select BR2_PACKAGE_WPEFRAMEWORK_CDMI_PLAYREADY_VGDRM     if !BR2_PACKAGE_WPEFRAMEWORK_CDMI_SOFTWARE_OVERRIDE &&  BR2_PACKAGE_VSS_SDK
	default y
	help
	  PlayReady
